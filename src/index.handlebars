{{> page_top}}

<div class="application">
  <form id="regexp-form">
    <textarea id="regexp-input" autofocus="autofocus" placeholder="输入 JS 风格的正则表达式来展示"></textarea>
    <button type="submit">分析</button>

    <ul class="inline-list">
      <li class="download-svg">
        <a href="#" class="inline-icon" data-action="download-svg" download="image.svg" type="image/svg+xml">{{icon "#data-transfer-download"}}下载 SVG</a>
      </li>
      <li class="download-png">
        <a href="#" class="inline-icon" data-action="download-png" download="image.png" type="image/png">{{icon "#data-transfer-download"}}下载 PNG</a>
      </li>
      <li class="permalink">
        <a href="#" class="inline-icon" data-action="permalink">{{icon "#link-intact"}}链接</a>
      </li>
    </ul>
  </form>
</div>

<div class="results">
  <div id="error"></div>

  <ul id="warnings"></ul>

  <div id="regexp-render"></div>
</div>

{{> page_bottom}}
